
<fieldset>
    <div class="from-horizontal">
        <div class="editor-lable">
            Name
        </div>
        <div class="editor-lable">
            <input type="text" id="txtName" />
        </div>
        <div class="editor-lable">
            Address
        </div>
        <div class="editor-lable">
            <input type="text" id="txtAddress" />
        </div>
        <div class="editor-lable">
            City
        </div>
        <div class="editor-lable">
            <select id="txtCity">
                <option value="Nagpur">
                    Nagpur
                </option>
                <option value="Mumbai">
                    Mumbai
                </option>
            </select>
        </div>
        <br/>
        <div>
            <input class="btn-default" type="button" id="btnSave" value="Save" />&nbsp;&nbsp; <input class="btn-default" type="button" id="btnUpdate" value="Update" />&nbsp;&nbsp; <input class="btn-default" type="button" id="btnDelete" value="Delete" />
        </div>
    </div>
</fieldset>

<script src="~/Scripts/jquery-3.7.0.min.js" type="text/javascript"></script>
<script>
    $(document).ready(function () {
        $('#btnSave').click(function ()
        {
            $.ajax(
                {
                    type: "POST",//http post meethod
                    url: "/Home/AddEmployee/",//controller/view
                    data:
                    {
                        Name: $('#txtName').val(),
                        Address: $('#txtAddress').val(),
                        City: $('#txtCity').val()
                    },
                    success: alert("record inserted")
                });
        });

        $('#btnUpdate').click(function () {
            $.ajax(
                {
                    type: "POST",
                    url: "/Home/AddEmployee",
                    data:
                    {
                        Name: $('#txtName').val(),
                        Address: $('#txtAddress').val(),
                        City:$('#txtCity').val()
                    },
                    success:alert("record updated")
                });
        });

        $('#btDelete').click(function ()
        {
            $.ajax(
                {
                    type: "POST",
                    url: "Home/AddEmployee",
                    data: {
                        Name: $('#txtName').val(),
                        Address: $('#txtAddress').val(),
                        City:$('#txtCity').val()
                    },
                    success:alert("record Deleted")
                });
        });
    });
    
</script>

