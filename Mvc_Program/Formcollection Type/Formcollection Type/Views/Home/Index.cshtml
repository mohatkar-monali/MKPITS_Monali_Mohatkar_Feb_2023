

<h2>Form Collection Example</h2>
@model Formcollection_Type.Models.UserModel

@using (Html.BeginForm("Form1", "Home", FormMethod.Post))
            {
                <table>
                    <tr>
                        <td>Enter Id:</td>
                        <td>@Html.TextBoxFor(m=>m.Id)</td>
                    </tr>
                    <tr>
                        <td>Enter Name:</td>
                        <td>@Html.TextBoxFor(m=>m.Name)</td>
                    </tr>
                    <tr>
                        <td>Addon:</td>
                        <td>
                            @Html.CheckBoxFor(m=>m.Addon)
                        </td>
                    </tr>
                </table>
                <input type="submit" value="submit"><br/>
            }
Id:@ViewBag.id<br/>
Name:@ViewBag.name<br/>
Addon:@ViewBag.addon

